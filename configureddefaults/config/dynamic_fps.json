{
  "idle": {
    "timeout": 60
  },
  "states": {
    "hovered": {
      "frame_rate_target": -1,
      "show_toasts": false
    },
    "unfocused": {
      "frame_rate_target": 10,
      "graphics_state": "reduced"
    },
    "invisible": {
      "graphics_state": "minimal",
      "run_garbage_collector": true
    },
    "unplugged": {
      "frame_rate_target": 60,
      "enable_vsync": false
    },
    "abandoned": {
      "frame_rate_target": 15,
      "volume_multipliers": {
        "master": 0.5
      },
      "graphics_state": "reduced",
      "run_garbage_collector": true
    }
  }
}
